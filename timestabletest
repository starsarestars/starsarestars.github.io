import random
import time

def times_table_test():
    print("Welcome to the Times Tables Test!")
    print("You will be asked 10 questions.")
    print("----------------------------------")

    score = 0
    num_questions = 10

    start_time = time.time()

    for i in range(num_questions):
        num1 = random.randint(1, 12)
        num2 = random.randint(1, 12)

        answer = int(input(f"Question {i+1}: {num1} x {num2} = "))

        if answer == num1 * num2:
            print("Correct!\n")
            score += 1
        else:
            print(f"Wrong! The correct answer was {num1 * num2}\n")

    end_time = time.time()
    total_time = round(end_time - start_time, 2)

    print("----------------------------------")
    print(f"Test complete!")
    print(f"Your score: {score}/{num_questions}")
    print(f"Time taken: {total_time} seconds")

times_table_test()
